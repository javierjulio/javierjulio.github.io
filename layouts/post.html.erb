<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
  <body>
    <%= render "layouts/header" %>
    <div class="content-container">
      <header class="post-header">
        <h1 class="post-title"><%= current_page.data["title"] %></h1>
        <% if current_page.data["date"] %>
        <time class="post-date" datetime="<%= current_page.data["date"].strftime("%Y-%m-%d") %>">
          <%= current_page.data["date"].strftime("%B %-d, %Y") %>
        </time>
        <% end %>
      </header>
      <div class="post-content">
        <%= yield %>
      </div>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
