<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
  <body>
    <%= render "layouts/header" %>
    <div class="content-container" role="main">
      <% if current_page.data["page_heading"] %>
        <header class="post-header">
          <h1 class="post-title margin-bottom-1x"><%= current_page.data["page_heading"] %></h1>
        </header>
      <% end %>
      <%= yield %>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
